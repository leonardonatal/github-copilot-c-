<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MoreCoffee.Models"
             xmlns:viewmodels="clr-namespace:MoreCoffee.ViewModels"
             x:Class="MoreCoffee.MainPage"
             x:DataType="viewmodels:MainPageViewModel">

    <Grid RowDefinitions="*, Auto, Auto" Padding="10" RowSpacing="20">
        <CollectionView ItemsSource="{Binding CoffeeGroups}"
                       Grid.Row="0"
                       IsGrouped="True">
            <CollectionView.GroupHeaderTemplate>
                <DataTemplate x:DataType="viewmodels:CoffeeGroup">
                    <Grid Padding="10" BackgroundColor="{StaticResource Primary}" Opacity="0.8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="{Binding DisplayDate}"
                               TextColor="White"
                               FontAttributes="Bold"/>
                        <Label Grid.Column="1"
                               Text="{Binding TotalOunces, StringFormat='{0:N1}oz'}"
                               TextColor="White"
                               FontAttributes="Bold"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.GroupHeaderTemplate>
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Coffee">
                    <Grid Padding="10" ColumnDefinitions="*, Auto, Auto" ColumnSpacing="15">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Path=EditCoffeeCommand, x:DataType=viewmodels:MainPageViewModel, Source={RelativeSource AncestorType={x:Type viewmodels:MainPageViewModel}}}"
                                CommandParameter="{Binding .}"/>
                        </Grid.GestureRecognizers>
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="{Binding Name}" 
                                   VerticalOptions="Center"/>
                            <Label Text="{Binding BagName}" 
                                   FontSize="Small"
                                   TextColor="Gray"
                                   IsVisible="{Binding BagName, Converter={StaticResource StringIsNotNullOrEmptyConverter}}"
                                   VerticalOptions="Center"/>
                        </VerticalStackLayout>
                        <Label Text="{Binding Ounces, StringFormat='{0}oz'}"
                               Grid.Column="1"
                               VerticalOptions="Center"/>
                        <Image Grid.Column="2"
                               Source="chevronright.png"
                               HeightRequest="16"
                               WidthRequest="16"
                               VerticalOptions="Center"
                               HorizontalOptions="End"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
            <CollectionView.GroupFooterTemplate>
                <DataTemplate>
                    <BoxView HeightRequest="1" 
                             BackgroundColor="{StaticResource Gray300}"
                             Margin="0,0,0,10"/>
                </DataTemplate>
            </CollectionView.GroupFooterTemplate>
        </CollectionView>

        <Grid Grid.Row="1" ColumnDefinitions="*, Auto">
            <Label Text="{Binding TotalOuncesText}"
                  Grid.Column="0"
                  HorizontalOptions="End"
                  FontSize="16"
                  FontAttributes="Bold"/>
                  
            <Button Text="Manage Bags"
                    Command="{Binding NavigateToBagsCommand}"
                    Grid.Column="1"
                    Margin="10,0,0,0"/>
        </Grid>

        <Border Grid.Row="2" Stroke="{StaticResource Primary}" StrokeThickness="1" StrokeShape="RoundRectangle 10" Padding="10">
            <Grid RowDefinitions="Auto,Auto,Auto" 
                  ColumnDefinitions="*,Auto,Auto" 
                  RowSpacing="15"
                  ColumnSpacing="15">
                <Entry Text="{Binding Name}"
                       Placeholder="Coffee Name"
                       Grid.Row="0"
                       Grid.ColumnSpan="3"
                       Margin="0,0,0,10"/>
                
                <VerticalStackLayout Grid.Row="1" Grid.ColumnSpan="3" Spacing="5">
                    <CheckBox IsChecked="{Binding IsUsingBag}" />
                    <Label Text="Use Coffee from a Bag" VerticalOptions="Center" />
                    <Picker ItemsSource="{Binding AvailableBags}"
                            ItemDisplayBinding="{Binding DisplayName}"
                            SelectedItem="{Binding SelectedBag}"
                            IsEnabled="{Binding IsUsingBag}"
                            IsVisible="{Binding IsUsingBag}"/>
                </VerticalStackLayout>
                
                <Entry Text="{Binding Ounces}"
                       Placeholder="Ounces"
                       Keyboard="Numeric"
                       Grid.Row="2"
                       Grid.Column="0"/>
                
                <DatePicker Date="{Binding SelectedDate}"
                           Grid.Row="2"
                           Grid.Column="1"
                           MinimumWidthRequest="125"/>
                
                <Button Text="Add Coffee"
                        Command="{Binding AddCoffeeCommand}"
                        Grid.Row="2"
                        Grid.Column="2"/>
            </Grid>
        </Border>
    </Grid>

</ContentPage>
